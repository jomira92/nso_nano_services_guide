<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device}</name>
      <config>
        <ntp xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <server>
            <server-list>
              <name>{/ADDRESS}</name>
              <minpoll>8</minpoll>
              <maxpoll>12</maxpoll>
            </server-list>
          </server>
        </ntp>
      </config>
    </device>
  </devices>
</config-template>